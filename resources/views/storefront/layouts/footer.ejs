<!-- Footer -->
<section id="footer">
    <!-- footer lg -->
    <div class="footer_bg py-4 d-none d-sm-block">
        <div class="container">
            <div class="row justify-content-center">
                <% categoryTypes.forEach(categoryType => { %>
                    <div style="color: whitesmoke" class="col-md-2">
                        <h5 style="padding-bottom: 15px" class="text-start"><%= categoryType.name; %></h5>
                        <% categoryType.categories.forEach(category => { %>
                            <div style="padding-bottom: 10px">
                                <a class="link-light link-underline-opacity-0"
                                   href="/categories/<%= category.slug %>"><%= category.name %></a>
                            </div>
                        <% }); %>
                    </div>
                <% }); %>
                <div style="color: whitesmoke" class="col-md-2">
                    <h5 style="padding-bottom: 15px" class="text-start">Help</h5>
                    <div style="padding-bottom: 10px">
                        <a class="link-light link-underline-opacity-0" href="/contact-us">Contact us</a>
                    </div>
                </div>
            </div>
            <!-- footer icons -->
            <div class="row">
                <div class="d-flex justify-content-center py-4">
                    <div>
                        <i
                                class="fa-brands fa-instagram fa-xl"
                                style="color: #ffffff; padding-right: 40px"
                        ></i>
                    </div>
                    <div>
                        <i
                                class="fa-brands fa-facebook fa-lg"
                                style="color: #ffffff; padding-right: 40px"
                        ></i>
                    </div>
                    <div>
                        <i
                                class="fa-brands fa-line fa-lg"
                                style="color: #ffffff; padding-right: 40px"
                        ></i>
                    </div>
                    <div>
                        <i
                                class="fa-solid fa-envelope fa-lg"
                                style="color: #ffffff; padding-right: 40px"
                        ></i>
                    </div>
                </div>
                <!-- footer logo -->
                <div class="row justify-content-center">
                    <div class="col-2">
                        <img
                                class="img-fluid"
                                src="/images/Apex-logos_white.png"
                                alt="Apex Logo"
                                width="300px"
                                height="25"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Accordion when less than md -->
    <div class="accordion accordion-flush d-md-none" id="footer-accordion">
        <% categoryTypes.forEach(categoryType => { %>
            <div class="accordion-item">

                <h2 class="accordion-header">
                    <button
                            class="accordion-button collapsed"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#flush-<%= categoryType.slug %>"
                            aria-expanded="false"
                            aria-controls="flush-<%= categoryType.slug %>"
                    >
                        <%= categoryType.name %>
                    </button>
                </h2>
                <div id="flush-<%= categoryType.slug %>" class="accordion-collapse collapse"
                     data-bs-parent="#footer-accordion">
                    <ul style="padding-bottom: 10px" class="p-3 list-unstyled d-flex gap-2 flex-column">
                        <% categoryType.categories.forEach(category => { %>
                            <li>
                                <a class="link-dark link-underline-opacity-0" href="/categories/<%= category.slug %>">
                                    <%= category.name %>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        <% }) %>
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button
                        class="accordion-button collapsed"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#flush-help"
                        aria-expanded="false"
                        aria-controls="flush-help"
                >
                    Help
                </button>
            </h2>
            <div
                    id="flush-help"
                    class="accordion-collapse collapse"
                    data-bs-parent="#footer-accordion"
            >
                <ul
                        style="padding-bottom: 10px"
                        class="p-3 list-unstyled d-flex gap-2 flex-column"
                >
                    <li>
                        <a class="link-dark link-underline-opacity-0" href="shop.html"
                        >Contact us</a
                        >
                    </li>
                </ul>
            </div>
        </div>
        <div>
            <img
                    style="margin-left: auto; margin-right: auto; display: block; max-width: 100px"
                    src="/images/Apex-logos_black.png"
                    alt="Apex Logo"
            />
        </div>

    </div>
</section>

<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
></script>
</body>
</html>