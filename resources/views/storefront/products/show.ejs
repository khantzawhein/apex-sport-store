<%- include("../layouts/header") %>

<!-- Breadcrumb -->
<%- include("../partials/breadcrumb", {breadcrumbs: [
{"url": "/", "name": "Home"},
{"url": "/categories/all-products", "name": "Products"},
{ "name": product.name}
]}) %>

<section id="product">

    <div class="container">
        <div class="row">
            <div class="col-md-7 left-side">
                <div class="d-flex gap-4 flex-column-reverse flex-md-row">
                    <% if (product.product_images.length === 0) { %>
                        <img src="/images/no-image.svg" class="img-fluid" alt="No Image">
                    <% } else { %>
                        <div class="product-thumbnails-container flex-md-column flex-row justify-content-start">
                            <% product.product_images.forEach(image => { %>
                                <img src="/<%= image.image_path %>" alt="<%= image.image_name %>">
                            <% }) %>
                        </div>
                        <div class="flex-grow-1">
                            <div class="product-image-container d-flex">
                                <img src="/<%= product.product_images[0].image_path %>" class="main-product-img"
                                     alt="<%= product.product_images[0].image_name %>">
                            </div>
                        </div>
                    <% } %>
                </div>

                <div class="reviews-container">
                    <h2 class="fs-4 mt-5 d-flex align-items-center mb-4">
                        Reviews <span class="ms-2 badge rounded-pill text-bg-secondary"
                                      style="font-size: 0.8rem">157</span>
                    </h2>
                    <div class="review">
                        <div class="d-flex">
                            <div class="avatar-container me-3" style="width: 15%">
                                <img src="/images/avataaars.png" alt="Avatar" class="rounded-circle img-fluid">
                            </div>
                            <div>
                                <div class="d-flex align-items-center">
                                    <div class="review-star">
                                        <i class="fas fa-star text-apex"></i>
                                        <i class="fas fa-star text-apex"></i>
                                        <i class="fas fa-star text-apex"></i>
                                        <i class="fas fa-star text-apex"></i>
                                        <i class="fas fa-star-half-alt text-apex"></i>
                                    </div>
                                </div>
                                <p class="text-secondary mt-2">
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci
                                    autem consequuntur cumque, doloremque doloribus ea eius eligendi error est eum
                                    ex explicabo facilis fugit
                                </p>
                                <span class="fw-bold">Kristin Watson</span>
                                <p class="text-secondary">March 14, 2024</p>
                            </div>
                        </div>
                    </div>

                    <div class="review">
                        <div class="d-flex">
                            <div class="avatar-container me-3" style="width: 15%">
                                <img src="/images/avataaars.png" alt="Avatar" class="rounded-circle img-fluid">
                            </div>
                            <div>
                                <div class="d-flex align-items-center">
                                    <div class="review-star">
                                        <i class="fas fa-star text-apex"></i>
                                        <i class="fas fa-star text-apex"></i>
                                        <i class="fas fa-star text-apex"></i>
                                        <i class="fas fa-star text-apex"></i>
                                        <i class="fas fa-star-half-alt text-apex"></i>
                                    </div>
                                </div>
                                <p class="text-secondary mt-2">
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci
                                    autem consequuntur cumque, doloremque doloribus ea eius eligendi error est eum
                                    ex explicabo facilis fugit
                                </p>
                                <span class="fw-bold">Kristin Watson</span>
                                <p class="text-secondary">March 14, 2024</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-5 right-side mt-md-0 mt-5">
                <h1 class="fs-3"><%= product.name %></h1>
                <div class="review-summary d-flex">
                    <div class="review-star">
                        <i class="fas fa-star text-apex"></i>
                        <i class="fas fa-star text-apex"></i>
                        <i class="fas fa-star text-apex"></i>
                        <i class="fas fa-star text-apex"></i>
                        <i class="fas fa-star-half-alt text-apex"></i>
                    </div>
                    <span class="text-muted ms-3">157 reviews</span>
                </div>

                <% if (product.promotional_price) { %>
                    <div class="mt-4 price d-flex align-items-center">
                        <h2 class="fs-4 fw-bold me-2 my-0">฿<%= product.promotional_price %></h2>
                        <span class="fw-bold mt-1 text-secondary text-decoration-line-through">฿<%= product.price %></span>
                    </div>
                    <p class="text-secondary mt-2" style="font-size: 0.85rem">
                        <i class="fa-solid fa-tag me-2"></i>Save <%= Math.floor((1 - (product.promotional_price / product.price)) * 100) %>
                        %
                    </p>
                <% } else { %>
                    <div class="mt-4 price">
                        <h2 class="fs-4 fw-bold me-2 my-0">฿<%= product.price %></h2>
                    </div>
                <% } %>

                <div class="product-description mt-3">
                    <p class="text-secondary"><%- product.description %></p>
                </div>

                <div class="add-to-cart-container mt-5">
                    <button class="btn btn-apex text-white add-to-cart" style="width: 13rem; height: 3rem">
                        Add to cart
                    </button>
                </div>

                <div class="store-feature-container d-flex flex-column gap-2">
                    <div class="store-feature">
                        <i class="fas fa-truck me-2"></i>
                        <span>Free Shipping Worldwide</span>
                    </div>
                    <div class="store-feature">
                        <i class="fas fa-undo me-2"></i>
                        <span>30 days Return</span>
                    </div>
                    <div class="store-feature">
                        <i class="fa-regular fa-credit-card me-2"></i>
                        <span>100% Secure Payment</span>
                    </div>
                </div>
            </div>

            <div class="col-12">

                <section id="related">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="text-start fw-bold mt-5 mb-4">People also buy</h2>
                        </div>
                    </div>
                    <div id="related-product" class="overflow-auto d-flex gap-3">
                        <% relatedProducts.forEach((relatedProduct) => { %>
                            <div class="col-auto">
                                <div class="card h-100 position-relative" style="min-width: 150px;">
                                    <img
                                            src="/<%= relatedProduct.product_images[0]?.image_path; %>"
                                            class="card-img-top product-card-img"
                                            alt="Image of <%= relatedProduct.name; %>"
                                    />

                                    <div class="product-card-upper-layer position-absolute">
                                        <div class="product-card-inner-layer">
                                            <a class="text-decoration-none product-card-title"
                                               href="/products/<%= relatedProduct.slug %>">
                                                <h5 class="card-title card-header-style fw-bold"><%= relatedProduct.name; %></h5>
                                            </a>

                                            <div class="price">
                                                <p class="card-text text-white fw-bold">
                                                    ฿ <%= relatedProduct.price.toLocaleString(); %>
                                                </p>
                                            </div>

                                            <a href="/products/<%= relatedProduct.slug %>"
                                               class="btn btn-sm rounded-2 mt-2 btn-apex">
                                                Shop Now
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <!-- New Release load forward and backward button -->
                    <div class="row">
                        <div class="col-md-12 mt-4">
                            <div class="d-flex justify-content-end">
                                <button
                                        id="related-product-scroll-left"
                                        type="button"
                                        class="btn btn-warning me-4"
                                        style="border-radius: 20px"
                                >
                                    <i class="fa-solid fa-arrow-left"></i>
                                </button>

                                <button
                                        id="related-product-scroll-right"
                                        type="button"
                                        class="btn btn-warning me-4"
                                        style="border-radius: 20px"
                                >
                                    <i class="fa-solid fa-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script>
  $(document).ready(function() {
    $('.product-thumbnails-container img').click(function() {
      let imgSrc = $(this).attr('src');
      $('.main-product-img').attr('src', imgSrc);
    });

    const newReleaseProduct = $('#related-product');
    $('#related-product-scroll-left').click(function() {
      newReleaseProduct.animate({ scrollLeft: newReleaseProduct.scrollLeft() - 200 });
    });

    $('#related-product-scroll-right').click(function() {
      newReleaseProduct.animate({ scrollLeft: newReleaseProduct.scrollLeft() + 200 });
    });

    $(".add-to-cart").click(addToCart);


    function addToCart() {
      axios.post('/cart', {
        product_id: '<%= product.id %>'
      })
        .then((response) => {
          console.log(response);
          toastr.success('Product Added To Cart!');
        })
        .catch((error) => {
          console.log(error);
        });
    }

  });
</script>

<%- include("../layouts/footer") %>
