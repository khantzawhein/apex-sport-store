<%- include("../../layouts/header.ejs") %>
<main>
    <div class="row">
        <div class="container-md">
            <div class="card">
                <div class="card-body">
                    <%- include("../../components/validation-error.ejs") %>
                    <h5 class="fw-bold mb-4">Edit Customer</h5>
                    <form action="/admin/customers/<%- customer.id; %>" method="POST">
                        <div class="form-group mb-2">
                            <label for="customerName" class="required">Name</label>
                            <input
                                    type="text"
                                    class="form-control"
                                    id="customerName"
                                    name="name"
                                    value="<%- customer.name; %>"
                            />
                        </div>

                        <div class="form-group mb-2">
                            <label for="customerEmail" class="required">Email</label>
                            <input
                                    type="email"
                                    class="form-control"
                                    id="customerEmail"
                                    name="email"
                                    value="<%- customer.email; %>"
                            />
                        </div>

                        <div class="form-group mb-2">
                            <label for="customerAddress" class="required">Address</label>
                            <input
                                    type="text"
                                    class="form-control"
                                    id="customerAddress"
                                    name="address"
                                    value="<%- customer.address; %>"
                            />
                        </div>
                        <div class="form-group mb-2">
                            <label for="customerPhone" class="required">Phone</label>
                            <input
                                    type="text"
                                    class="form-control"
                                    id="customerPhone"
                                    name="phone"
                                    value="<%- customer.phone; %>"
                            />
                        </div>

                        <div class="modal-footer my-3">
                            <a href="/admin/customers" class="btn btn-outline-secondary">Close</a>
                            <button type="submit" class="btn btn-apex mx-3">
                                Update Customer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include("../../layouts/footer.ejs") %>
