<%- include("../../layouts/header.ejs") %>
<main>
  <div class="row">
    <h4 class="my-3">Edit Category</h4>
    <div class="container">
      <form action="/admin/category/edit/<%- category.id %>" method="POST">
        <div class="form-group">
          <label for="categoryEditName">Name</label>
          <input
            type="text"
            class="form-control"
            id="categoryName"
            name="categoryEditName"
            value="<%- category.name %>"
          />
        </div>

        <div class="modal-footer my-3">
          <a href="/admin/category" class="btn btn-secondary">Close</a>
          <button type="submit" class="btn btn-apex-green mx-3 text-white">
            Update Category
          </button>
        </div>
      </form>
    </div>
  </div>
</main>
<%- include("../../layouts/footer.ejs") %>
