<%- include("../../layouts/header.ejs") %>
<main>
    <div class="row">
        <h4 class="my-3">Edit Category</h4>
        <div class="container-md">
            <%- include("../../components/validation-error.ejs") %>
            <form action="/admin/category/edit/<%- category.id; %>" method="POST">
                <div class="form-group">
                    <label for="categoryName" class="required">Name</label>
                    <input
                            type="text"
                            class="form-control"
                            id="categoryName"
                            name="categoryName"
                            value="<%- category.name; %>"
                    />
                </div>
                <div class="form-group mt-3">
                    <label for="category_type" class="required">Category Type</label>
                    <select class="form-select" name="category_type" id="category_type">
                        <% categoryTypes.forEach(categoryType => { %>
                            <option value="<%= categoryType.id; %>" <%= category.category_type_id === categoryType.id ? "selected" : ""%>><%= categoryType.name; %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="modal-footer my-3">
                    <a href="/admin/category" class="btn btn-outline-secondary">Close</a>
                    <button type="submit" class="btn btn-apex mx-3">
                        Update Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>
<%- include("../../layouts/footer.ejs") %>
